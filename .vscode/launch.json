      ]
    },
    // train
    // python train.py --py-config config/tpv04_occupancy.py --work-dir out/tpv_occupancy
    // python train.py --py-config config/tpv_lidarseg.py --work-dir out/tpv_lidarseg
    {
      "name": "train",
      "type": "debugpy",
      "request": "launch",
      "program": "train.py",
      "justMyCode": false,
      "cwd": "${workspaceFolder}",
      "env": { "CUDA_VISIBLE_DEVICES": "5" },
      "args": [
        "--debug",
        "--py-config", "config/tpv04_occupancy.py", "--work-dir", "out/tpv_occupancy",
