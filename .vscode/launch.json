{
  "version": "0.2.0",
  "configurations": [
    // test
    // python eval.py --py-config config/tpv04_occupancy.py --ckpt-path model_zoo/download/tpv04_occupancy_v2.pth
    // python eval.py --py-config config/tpv_lidarseg.py --ckpt-path model_zoo/download/tpv10_lidarseg_v2.pth
    {
      "name": "test",
      "type": "debugpy",
      "request": "launch",
      "program": "eval.py",
      "justMyCode": true,
      "cwd": "${workspaceFolder}",
      "env": { "CUDA_VISIBLE_DEVICES": "1" },
      "args": [
        "--py-config", "config/tpv04_occupancy.py", "--ckpt-path", "model_zoo/download/tpv04_occupancy_v2.pth",
